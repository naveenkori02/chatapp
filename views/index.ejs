<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Gilroy;
    }
    html,body{
        width: 100%;
        height: 100%;
    }
    #main{
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      gap: 5px;
      padding: 5px;
    }
    #msgbox{
      width: 100%;
      height: 80%;
      border: 1px solid #000;
      padding: 20px;
      overflow: auto;
    }
    .msg{
      width: fit-content;
      padding: 10px 20px;
      border-radius: 50px;
      background-color: royalblue;
      color: #fff;
      margin-bottom: 10px;
    }
    textarea{
      width: 100%;
      height: 15%;
      border: 1px sloid #000;
      padding: 5px;
    }
    #sendmsg{
      width: 100%;
      height: 5%;
      background-color: royalblue;
      border: 1px solid #000;
      color: #fff;
    }

    #fixed{
      position: fixed;
      width: 100%;
      height: 100%;
      background-color: #00000060;
    }
    #box{
      width: 22%;
      height: 15%;
      border-radius: 20px;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      padding: 20px;
      background-color: #fff;
    }
    input{
      width: 100%;
      height: 60%;
      margin-bottom: 5px;
      font-size: 20px;
      font-weight: 500;
      padding: 10px;
    }

    #setname{
      width: 100%;
      height: 35%;
      background-color: blue;
      color: #fff;
      border: none;
    }

    #topright{
      position: absolute;
      top: 5%;
      right: 5%;
      display: flex;
      align-items: flex-start;
      gap: 30px;
      display: none;
    }

    #profile{
      display: flex;
      align-items: center;
      gap: 5px;
    }
    
    #onlineuser{
      width: 150px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5px;
    }

    #onlineuser h4{
      cursor: pointer;
    }

    #onlinenumber{
      margin: 0 5px 0 20px;
    }

    #users{
      width: 150px;
      height: 200px;
      border-radius: 5px;
      background-color: #dadada;
      display: none;
      overflow: auto;
    }
    
    #users::-webkit-scrollbar{
      width: 8px;
    }
    
    #users::-webkit-scrollbar-thumb{
      background-color: #252525;
      border-radius: 10px;
    }
    
    .user{
      width: 100%;
      height: 30px;
      border-bottom: 1px solid #000;
      padding: 8px 0 0 15px;
    }

    .user:hover{
      background-color: #939393;
    }

    .user h5{
      font-size: 15px;
      font-weight: 500;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div id="fixed">
    <div id="box">
      <input type="text" placeholder="Write your name">
      <button id="setname">Set name</button>
    </div>
  </div>

  <div id="main">
    <div id="topright">
      <div id="profile">
        ðŸ‘¤<h3 id="username">User</h3>
      </div>
      <div id="onlineuser">
        <h4>ðŸŸ¢<span id="onlinenumber">0</span>â–¾</h4>
        <div id="users">
          
        </div>
      </div>
    </div>
    <div id="msgbox">
    </div>
    <textarea name="msg" placeholder="Write some messages...." id="" cols="30" rows="10"></textarea>
    <button id="sendmsg">Send message</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js" integrity="sha512-xbQU0+iHqhVt7VIXi6vBJKPh3IQBF5B84sSHdjKiSccyX/1ZI7Vnkt2/8y8uruj63/DVmCxfUNohPNruthTEQA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    var socket = io();
    var textarea = document.querySelector("textarea");
    var input = document.querySelector("input");
    var msgbox = document.querySelector("#msgbox");
    var sendmsg = document.querySelector("#sendmsg");
    var users = document.querySelector("#users");


    socket.on("online", function(data){
      document.querySelector("#onlinenumber").textContent = data.length;

      var clutter = "";
      data.forEach(function(elem){
        var xyz = `
        <div class="user">
          <h5>${elem}</h5>
        </div>`
        clutter += xyz;
      })
      users.innerHTML = clutter;
    })


    sendmsg.addEventListener('click', function(){
      socket.emit("msg", {name: input.value ,msgsent: textarea.value});
      textarea.value = "";
    })


    socket.on("msg", function(data){
      var div = document.createElement("div");
        div.classList.add("msg");
        div.textContent = `${data.name}: ${data.msgsent}`;
        msgbox.appendChild(div);
        msgbox.scrollTop = msgbox.scrollHeight
    })


    document.querySelector("#setname").addEventListener('click', function(){
      var username = input.value.trim();
      if(username.length > 1){
        document.querySelector("#fixed").style.display = "none";
        document.querySelector("#topright").style.display = "flex";
        document.querySelector("#username").textContent = username;
        socket.emit("inputname", username);
      }
    })

    var flag = 0;
    document.querySelector("#onlineuser h4").addEventListener("click", function(){
      if(flag === 0){
        document.querySelector("#users").style.display = "block";
        flag = 1;
      }else{
        document.querySelector("#users").style.display = "none";
        flag = 0;
      }
    })


   

  </script>
</body>
</html>